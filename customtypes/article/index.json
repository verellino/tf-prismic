{
  "id": "article",
  "label": "Article",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "uid": {
        "type": "UID",
        "config": {
          "label": "UID",
          "placeholder": "URL slug for the article"
        }
      },
      "title": {
        "type": "StructuredText",
        "config": {
          "label": "Title",
          "placeholder": "Title of the article",
          "allowTargetBlank": false,
          "single": "heading1"
        }
      },
      "publishDate": {
        "type": "Date",
        "config": {
          "label": "Publish Date",
          "placeholder": "Date the article was published"
        }
      },
      "featuredImage": {
        "type": "Image",
        "config": {
          "label": "Featured Image",
          "constraint": {
            "width": 2000,
            "height": 1500
          },
          "thumbnails": []
        }
      },
      "category": {
        "type": "Link",
        "config": {
          "select": "document",
          "customtypes": [
            "category"
          ],
          "label": "category",
          "placeholder": "Category"
        }
      },
      "slices": {
        "type": "Slices",
        "fieldset": "Slice Zone",
        "config": {
          "choices": {
            "image": {
              "type": "SharedSlice"
            },
            "quote": {
              "type": "SharedSlice"
            },
            "text": {
              "type": "SharedSlice"
            },
            "contact_form": {
              "type": "SharedSlice"
            }
          }
        }
      }
    },
    "Meta": {
      "tags": {
        "type": "Group",
        "config": {
          "label": "Tags",
          "fields": {
            "tag": {
              "type": "Link",
              "config": {
                "label": "Tag",
                "select": "document",
                "customtypes": [
                  "tags"
                ]
              }
            }
          }
        }
      }
    }
  }
}